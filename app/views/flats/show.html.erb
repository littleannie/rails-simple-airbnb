<div class="cover" style="background-image: url('https://images.unsplash.com/photo-1478860409698-8707f313ee8b?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80')">
</div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p class="flat-show-address"><%= @flat.address %></p>
      </div>
      <div class="flat-show-card">
        <h3>A bit more about this flat...</h3>
        <p class="flat-show-address"><%= @flat.description %></p>
        <div class="cover" style="background-image: url('https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80')">
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="flat-show-card">
        <h4>Book this flat!</h4>
        <form>
          <div class="d-flex align-items-center">
            <label for="exampleInputEmail1" class="form-label me-2">From: </label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"w placeholder="10/05/2024">
          </div>
          <div class="my-3 d-flex align-items-center">
            <label for="exampleInputPassword1" class="form-label  me-2">To: </label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="12/05/2024">
          </div>
          <button type="submit" class="btn btn-primary w-100">Book</button>
        </form>
      </div>
      <div class="flat-show-card">
        <h3>Details</h3>
        <div class="d-flex align-items-center my-3">
          <i class="fa-solid fa-person me-1"></i><%= @flat.number_of_guests %>
          <i class="fa-solid fa-euro-sign me-1 ms-3"></i><%= @flat.price_per_night %>
        </div>
      </div>
      <div class="flat-show-card d-flex justify-content-between align-items-center">
        <h6 class="me-3">Share</h6>
        <div class="d-flex">
          <i class="fa-brands fa-instagram me-1 ms-3"></i>
          <i class="fa-brands fa-facebook me-1 ms-3"></i>
          <i class="fa-brands fa-twitter me-1 ms-3"></i>
        </div>
      </div>
    </div>
  </div>
</div>
